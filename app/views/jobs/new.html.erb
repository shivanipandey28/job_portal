<%= form_with model: @job do |form| %>
  <div>
    <%= form.label :job_title %><br>
    <%= form.text_field :job_title %>
    <% @job.errors.full_messages_for(:job_title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description%><br>
    <%= form.text_area :description %><br>
    <% @job.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :company_name%><br>
    <%= form.text_area :company_name %><br>
    <% @job.errors.full_messages_for(:company_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>